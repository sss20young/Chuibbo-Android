<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/main_blue</item>
        <item name="android:textColorHighlight">@color/main_blue_transparent</item>
        <item name="android:textCursorDrawable">@drawable/input_text_cursor</item>
        <item name="android:windowContentOverlay">@drawable/action_bar_divider</item>
    </style>
    <style name="Widget.AppCompat.Button.myButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="background">@color/main_blue</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">@dimen/btn_stroke_width</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_item_shape</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="height">5dp</item>
    </style>
    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>