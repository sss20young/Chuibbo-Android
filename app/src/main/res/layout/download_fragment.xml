<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_download"
            android:layout_width="250dp"
            android:layout_height="315dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/garo_line"
            android:layout_width="0px"
            android:layout_height="1px"
            android:layout_marginTop="25px"
            android:background="@color/gray_300"
            app:layout_constraintEnd_toEndOf="@+id/img_download"
            app:layout_constraintStart_toStartOf="@+id/img_download"
            app:layout_constraintTop_toBottomOf="@id/img_download" />

        <View
            android:id="@+id/sero_line"
            android:layout_width="1px"
            android:layout_height="0px"
            android:layout_marginLeft="25px"
            android:background="@color/gray_300"
            app:layout_constraintBottom_toBottomOf="@id/img_download"
            app:layout_constraintLeft_toRightOf="@id/img_download"
            app:layout_constraintTop_toTopOf="@id/img_download" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:text="3.5"
            android:textAlignment="center"
            android:textColor="@color/gray_300"
            app:layout_constraintLeft_toLeftOf="@id/garo_line"
            app:layout_constraintRight_toRightOf="@id/garo_line"
            app:layout_constraintTop_toBottomOf="@id/garo_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_marginLeft="5px"
            android:gravity="center"
            android:text="4.5"
            android:textColor="@color/gray_300"
            app:layout_constraintBottom_toBottomOf="@id/sero_line"
            app:layout_constraintLeft_toRightOf="@id/sero_line"
            app:layout_constraintTop_toTopOf="@id/sero_line" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>